import 'dart:ui';

import 'package:flutter/material.dart';
import 'package:go_router/go_router.dart';

class OnboardingPage extends StatelessWidget {
  const OnboardingPage({super.key});

  @override
  Widget build(BuildContext context) {
    final size = MediaQuery.of(context).size;
    return Scaffold(
      body: Container(
        width: size.width,
        height: size.height,
        decoration: const BoxDecoration(
          gradient: LinearGradient(
            begin: Alignment.topCenter,
            end: Alignment.bottomCenter,
            colors: [
              Color(0xFFF8F8F8),
              Color(0xFFEDEAFF),
            ],
          ),
        ),
        child: SafeArea(
          child: Padding(
            padding: const EdgeInsets.symmetric(horizontal: 24),
            child: Column(
              crossAxisAlignment: CrossAxisAlignment.center,
              children: [
                Row(
                  mainAxisAlignment: MainAxisAlignment.spaceBetween,
                  children: const [
                    Icon(Icons.star_border, size: 32),
                    Icon(Icons.toggle_on, size: 32),
                  ],
                ),
                const SizedBox(height: 40),
                SizedBox(
                  height: size.height * 0.3,
                  child: Stack(
                    alignment: Alignment.center,
                    children: [
                      Positioned(
                        left: 0,
                        child: _buildBar(height: 100, color: Colors.grey.shade300),
                      ),
                      Positioned(
                        left: 50,
                        child: _buildBar(height: 120, color: Colors.grey.shade300),
                      ),
                      Positioned(
                        left: 100,
                        child: _buildBar(height: 140, color: Colors.grey.shade300),
                      ),
                      Positioned(
                        left: 150,
                        child: _buildBar(
                          height: 170,
                          color: const LinearGradient(
                            colors: [Color(0xFF9B6CF0), Color(0xFFEA8BF3)],
                            begin: Alignment.topCenter,
                            end: Alignment.bottomCenter,
                          ).createShader(const Rect.fromLTWH(0, 0, 50, 150)),
                          isGradient: true,
                          showArrow: true,
                        ),
                      ),
                      Positioned(
                        left: 200,
                        child: _buildBar(height: 120, color: Colors.grey.shade300),
                      ),
                    ],
                  ),
                ),
                const SizedBox(height: 40),
                RichText(
                  textAlign: TextAlign.center,
                  text: const TextSpan(
                    text: 'Find way to\nmanage ',
                    style: TextStyle(
                      color: Colors.black,
                      fontWeight: FontWeight.bold,
                      fontSize: 28,
                    ),
                    children: [
                      TextSpan(
                        text: 'your',
                        style: TextStyle(color: Colors.purple),
                      ),
                      TextSpan(
                        text: ' finance',
                        style: TextStyle(color: Colors.pinkAccent),
                      ),
                    ],
                  ),
                ),
                const SizedBox(height: 8),
                const Text(
                  'The most Transparent &\nSecurity Bank ever',
                  textAlign: TextAlign.center,
                  style: TextStyle(color: Colors.grey),
                ),
                const Spacer(),
                Row(
                  mainAxisAlignment: MainAxisAlignment.spaceBetween,
                  children: [
                    ElevatedButton(
                      onPressed: () => context.go('/main'),
                      style: ElevatedButton.styleFrom(
                        padding: const EdgeInsets.symmetric(horizontal: 40, vertical: 16),
                        shape: RoundedRectangleBorder(
                          borderRadius: BorderRadius.circular(30),
                        ),
                        backgroundColor: const LinearGradient(
                          colors: [Color(0xFF9B6CF0), Color(0xFFEA8BF3)],
                        ).createShaderPaint().color,
                      ),
                      child: const Text('Get Started'),
                    ),
                    const Icon(Icons.qr_code, size: 32),
                  ],
                ),
                const SizedBox(height: 24),
              ],
            ),
          ),
        ),
      ),
    );
  }

  Widget _buildBar({required double height, required dynamic color, bool isGradient = false, bool showArrow = false}) {
    return Container(
      width: 40,
      height: height,
      decoration: BoxDecoration(
        borderRadius: BorderRadius.circular(12),
        color: isGradient ? null : color,
        gradient: isGradient
            ? const LinearGradient(
                colors: [Color(0xFF9B6CF0), Color(0xFFEA8BF3)],
                begin: Alignment.topCenter,
                end: Alignment.bottomCenter,
              )
            : null,
      ),
      child: showArrow
          ? const Icon(Icons.arrow_upward, color: Colors.white)
          : null,
    );
  }
}

extension GradientButtonExtension on Gradient {
  Paint createShaderPaint() {
    return Paint()
      ..shader = createShader(const Rect.fromLTWH(0, 0, 200, 70));
  }
}
